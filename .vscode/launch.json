    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "autoAttachChildProcesses": true,
            "program": "${workspaceFolder}/start.js",

            // dotenv with launch.json: https://stackoverflow.com/a/65995491/6908282
            "runtimeArgs": [
                "--require=dotenv/config"
            ],

            // using dotenv above for environment variables ( as it can be used by people who aren't using VS Code as well): https://stackoverflow.com/a/56194406/6908282
            // "env": {
            //     "FORGE_CLIENT_ID": "your id here",
            //     "FORGE_CLIENT_SECRET": "your secret here",
            //     "FORGE_CALLBACK_URL": "http://localhost:3000/api/forge/callback/oauth"
            // }
        }
    ]
}
